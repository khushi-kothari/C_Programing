/*
 Create a 2D array by taking input from the user. 
 Write a display function to print the content of this 2d array.
 */
 
#include <stdio.h>

void display(int *array, int n) {
    for (int i=0; i<n; i++) {
        printf("The value of element:%d is %d\n", i+1, array[i]);
    }
}

int main() {
    int n=0, array[n];
    
    printf("How many element you want in your array?\n");
    scanf("%d", &n);
    
    for (int i=0; i<n; i++) {
        printf("Enter the value of element:%d\n", i+1);
        scanf("%d", &array[i]);
    }
    
    display(array, n);
    
    return 0;
}
